{% extends 'base.html.twig' %}

{% block title %}Contributor{% endblock %}

{% block body %}
    <h1>Contributor</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contributor.id }}</td>
            </tr>
            <tr>
                <th>Civilité</th>
                <td>{{ contributor.civility }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ contributor.lastname }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ contributor.firstname }}</td>
            </tr>
            <tr>
                <th>Complément du Nom</th>
                <td>{{ contributor.complementName }}</td>
            </tr>
            <tr>
                <th>Login</th>
                <td>{{ contributor.login }}</td>
            </tr>
            <tr>
                <th>Mot de passe</th>
                <td>{{ contributor.pwd }}</td>
            </tr>
        </tbody>
    </table>
    <div class="container text-center">
        <blockquote>La liste des documents n'ayant pas encore une décision de dépôt</blockquote>
              {% for waitDecision in waitingDecisions %}
        <table class="table">
            <th>Decision numéro </th>
            <tbody>
            <table class="table">

            <tr>
                <th>Document Id / DOI</th>
                <td> {{ waitDecision['docId'] }}  / {{ waitDecision['docDOI'] }} </td>
            </tr>
            <tr>
                <th>Decision ID / Contenu</th>
                <td>{{ waitDecision['decId'] }} / {{ waitDecision['decContent'] }}</td>
            </tr>
            </table>
            </tbody>
        </table>
              {% endfor %}
    </div>
{% endblock %}
